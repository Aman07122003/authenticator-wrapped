{
  "name": "Authenticator Wrapped",
  "description": "Statistics on your Microsoft Authenticator successes (and failures)",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
      "service_worker": "/assets/js/background.js",
      "type": "module",
      "scripts":["/assets/js/background.js"]
  },
  "action": {
      "default_popup": "/assets/html/popup.html",
      "default_icon": "/assets/image/icon.png"
  },
  "content_scripts": [
      {
          "matches": ["https://login.microsoftonline.com/common/oauth2/*"],
          "js": ["/assets/js/tracker.js"]
      }
  ],
  "permissions": ["storage"]
}